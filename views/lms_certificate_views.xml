<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Certificate Tree View -->
    <record id="view_lms_certificate_tree" model="ir.ui.view">
        <field name="name">lms.certificate.tree</field>
        <field name="model">lms.certificate</field>
        <field name="arch" type="xml">
            <tree decoration-success="is_valid==True" decoration-muted="is_valid==False">
                <field name="certificate_number"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="score" widget="percentpie"/>
                <field name="grade"/>
                <field name="is_valid"/>
            </tree>
        </field>
    </record>

    <!-- Certificate Form View -->
    <record id="view_lms_certificate_form" model="ir.ui.view">
        <field name="name">lms.certificate.form</field>
        <field name="model">lms.certificate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_pdf" type="object" string="Generate PDF" class="btn-primary"/>
                    <button name="action_verify_certificate" type="object" string="Verify Certificate" class="btn-secondary"/>
                    <field name="is_valid" widget="boolean_button" options='{"terminology": "valid"}'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="certificate_number" readonly="1"/>
                            <field name="student_id" readonly="1"/>
                            <field name="course_id" readonly="1"/>
                            <field name="enrollment_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="issue_date" readonly="1"/>
                            <field name="expiry_date"/>
                            <field name="score" widget="percentpie" readonly="1"/>
                            <field name="grade" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="template_id" options="{'no_create': True}"/>
                        <field name="verification_hash" readonly="1"/>
                    </group>
                    
                    <group string="PDF Certificate" attrs="{'invisible': [('pdf_certificate', '=', False)]}">
                        <field name="pdf_certificate" filename="pdf_filename" readonly="1"/>
                        <field name="pdf_filename" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Certificate Search View -->
    <record id="view_lms_certificate_search" model="ir.ui.view">
        <field name="name">lms.certificate.search</field>
        <field name="model">lms.certificate</field>
        <field name="arch" type="xml">
            <search>
                <field name="certificate_number"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <filter string="Valid" name="valid" domain="[('is_valid','=',True)]"/>
                <filter string="Expired" name="expired" domain="[('is_valid','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Certificate Action -->
    <record id="action_lms_certificate" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">lms.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Certificate Template Views -->
    <record id="view_lms_certificate_template_tree" model="ir.ui.view">
        <field name="name">lms.certificate.template.tree</field>
        <field name="model">lms.certificate.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_lms_certificate_template_form" model="ir.ui.view">
        <field name="name">lms.certificate.template.form</field>
        <field name="model">lms.certificate.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="background_image" widget="image" class="oe_avatar"/>
                            <field name="signature_image" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    
                    <group string="Template Files">
                        <field name="template_file" filename="template_filename"/>
                        <field name="template_filename" invisible="1"/>
                    </group>
                    
                    <field name="template_html" nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>